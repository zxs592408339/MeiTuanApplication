<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="更多"
            android:textSize="@dimen/size3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="14dp"
            android:text="精品应用"
            android:textColor="@android:color/black"
            android:textSize="@dimen/my_id_size" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/common_mei_tuan_price1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/common_mei_tuan_p2">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="非wifi下使用省流量模式" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/mei_tuan_wire" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@drawable/favorable_button"
                android:drawableRight="@drawable/apollo_ic_arrow_right"
                android:padding="15dp"
                android:text="邀请好友使用美团" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/mei_tuan_wire" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@drawable/favorable_button"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="字号大小" />

                <ImageView
                    android:id="@+id/mei_tuan_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/apollo_ic_arrow_right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/mei_tuan_more"
                    android:text="中字号(默认)"
                    android:textColor="@color/mei_tuan_word" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/mei_tuan_wire" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@drawable/favorable_button"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="清空缓存" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="5,751K"
                    android:textColor="@color/mei_tuan_word" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/mei_tuan_wire" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/my_id_size"
                android:background="@color/mei_tuan_wire" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/apollo_ic_arrow_right"
                android:clickable="true"
                android:background="@drawable/favorable_button"
                android:padding="15dp"
                android:text="扫一扫" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/mei_tuan_wire" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/apollo_ic_arrow_right"
                android:clickable="true"
                android:background="@drawable/favorable_button"
                android:padding="15dp"
                android:text="问卷调查" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/mei_tuan_wire" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/apollo_ic_arrow_right"
                android:clickable="true"
                android:background="@drawable/favorable_button"
                android:padding="15dp"
                android:text="支付帮助" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/mei_tuan_wire" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@drawable/favorable_button"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="检查版本" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="好赞，当前意识最新版本"
                    android:textColor="@color/mei_tuan_word" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/mei_tuan_wire" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/apollo_ic_arrow_right"
                android:clickable="true"
                android:background="@drawable/favorable_button"
                android:padding="15dp"
                android:text="关于美团" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/mei_tuan_wire" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/apollo_ic_arrow_right"
                android:clickable="true"
                android:background="@drawable/favorable_button"
                android:padding="15dp"
                android:text="加入我们" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/mei_tuan_wire" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/apollo_ic_arrow_right"
                android:clickable="true"
                android:background="@drawable/favorable_button"
                android:padding="15dp"
                android:text="诊断网络" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/mei_tuan_wire" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/apollo_ic_arrow_right"
                android:layout_marginBottom="15dp"
                android:clickable="true"
                android:background="@drawable/favorable_button"
                android:padding="15dp"
                android:text="版本信息" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
